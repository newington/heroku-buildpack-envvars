#!/usr/bin/env bash

# Usage:
#
#     $ bin/compile <build-dir> <cache-dir> <env-path>

# Fail fast and fail hard.
set -eo pipefail

BP_DIR=$(cd $(dirname $0); cd ..; pwd)
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

indent() {
  sed -u 's/^/       /'
}

export_env_dir() {
  env_dir=$1
  allowed_vars_regex=${2:-''}
  denied_vars_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}

  if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
      echo "$e" | grep -E "$allowed_vars_regex" | grep -qvE "$denied_vars_regex" &&
      export "$e=$(cat $env_dir/$e)"
      :
    done
  fi
}

export_env_dir $ENV_DIR

echo "Here's my starting env:"
echo `export`

echo 'Running `bin/envvars` inside the buildpack environment' | indent
echo "Here's that bin/envvars file, which I'll source in a moment:"
cat $BUILD_DIR/bin/envvars
source $BUILD_DIR/bin/envvars

# give environment to later buildpacks
denied_exports_regex=' (BUILDPACK_[A-Z_]+|DYNO|HEROKU_[A-Z_]+|HOME|OLDPWD|PORT|PS1|PWD|REQUEST_ID|SHLVL|SOURCE_VERSION|STACK)='
touch "$BP_DIR/export"
# export | grep -E -e ' (PATH|LD_PRELOAD|LD_LIBRARY_PATH|LIBRARY_PATH|INCLUDE_PATH|CPATH|CPPPATH|PKG_CONFIG_PATH)='  >> "$BP_DIR/export"
export | grep -Ev $denied_exports_regex >> $BP_DIR/export

# Some temp debugging
echo "Export file created:\n"
cat $BP_DIR/export
